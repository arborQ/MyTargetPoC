form(name="formDialog", ng-submit="vm.saveToServer(formDialog, vm.model)", autocomplete="off")
  .modal-open
    .modal-backdrop.fade.in
    .modal.fade.in(style="display:block;")
      .modal-dialog(role='document')
        .modal-content(ng-show="vm.$isLoading")
          .modal-body
            .loading_placeholder
              .loading.main
        .modal-content(ng-show="!vm.$isLoading")
          .modal-header
            h4.modal-title
              block title
                span {{vm.PageTitle}}
          .modal-body
            block content
          .modal-footer
            block buttons
