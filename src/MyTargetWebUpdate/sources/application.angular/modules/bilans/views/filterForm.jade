.row
  .col.col-md-6
    label.control-label(for="search-text") Szukaj
    input.form-control#search-text(type="text", ng-model="vm.search.FreeText")
  .col.col-md-6
    label.control-label(for="search-text") Rodzaj
    .btn-group(style="width: 100%;")
      button.btn.btn-secondary(ng-click="vm.search.Type = 0", ng-class="{ true : 'active' }[vm.search.Type == 0]") Wszystkie
      button.btn.btn-secondary(ng-click="vm.search.Type = 1", ng-class="{ true : 'active' }[vm.search.Type  == 1]") Dostawa
      button.btn.btn-secondary(ng-click="vm.search.Type = -1", ng-class="{ true : 'active' }[vm.search.Type == -1]") Sprzedaż
.row
  .col.col-md-6
    .form-group
      product-range-filter(from="vm.search.NetPrice.MinValue", to="vm.search.NetPrice.MaxValue", name="Cena")
  .col.col-md-6
    .form-group
      product-range-filter(from="vm.search.Quantity.MinValue", to="vm.search.Quantity.MaxValue", name="Ilość")
