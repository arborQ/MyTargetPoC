ui-view
.card.page(ng-if="vm.model.length === 0")
  .card-block
    i Nie ma zmian w magazynie
.card.page(ng-if="vm.model.length !== 0")
  .card-block 
    .row
      .col-lg-12 
        span Aktywnosc 
        span.label.label-default.label-pill.pull-right W sumie: {{vm.model | totalProductCost}} PLN
  .list-group.list-group-flush
    a.list-group-item(ng-repeat="product in vm.model", ui-sref=".comment({ commentId : product.Id })")
      .row
        span.col.col-lg-3  {{ product.Created | arborDate }} 
        span.col.col-lg-6 {{product.ProductName}}
        span.col.col-sm-3.label.label-default.label-pill.pull-right(ng-class="{ 'label-success' : product.Value > 0 }") {{product | productCostSummary}}

 
