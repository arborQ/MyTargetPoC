<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title page-title>Just Move</title>
    <link rel="shortcut icon" type="image/ico" href="/images/logo_16.ico">

    <script src="~/common.js" charset="utf-8"></script>
    <script src="~/bower_components/webcomponentsjs/webcomponents-lite.js"></script>
    <link rel="import" href="~/dest/application.polymer/elements/elements.html">
    <style is="custom-style" include="shared-styles"></style>

</head>

<body class="fullbleed layout vertical">
  <span id="browser-sync-binding"></span>
  <template is="dom-bind" id="app">

      <paper-drawer-panel id="paperDrawerPanel">
        <!-- Drawer Scroll Header Panel -->
        <paper-scroll-header-panel drawer fixed>

          <!-- Drawer Toolbar -->
          <paper-toolbar id="drawerToolbar">
            <span class="menu-name">Just move</span>
          </paper-toolbar>

          <!-- Drawer Content -->
          <paper-menu attr-for-selected="data-route" selected="[[route]]">
            <a data-route="home" href="#/products">
              <iron-icon icon="home"></iron-icon>
              <span>Produkty</span>
            </a>

            <a data-route="users" href="#/bilans" disabled="disabled">
              <iron-icon icon="info"></iron-icon>
              <span>Bilans</span>
            </a>

          </paper-menu>
        </paper-scroll-header-panel>

        <!-- Main Area -->
        <paper-scroll-header-panel main id="headerPanelMain" condenses keep-condensed-header>
          <!-- Main Toolbar -->
          <!-- <paper-toolbar id="mainToolbar" class="tall">
            <paper-icon-button id="paperToggle" icon="menu" paper-drawer-toggle></paper-icon-button>

            <span class="space"></span>

            <paper-icon-button icon="refresh"></paper-icon-button>
            <paper-icon-button icon="search"></paper-icon-button>

            <div class="middle middle-container">
              <div class="app-name">Polymer Starter Kit</div>
            </div>

            <div class="bottom bottom-container">
              <div class="bottom-title">The future of the web today</div>
            </div>
          </paper-toolbar> -->

          <div class="content">
            <app-router>
              <app-route path="/products" import="/dest/application.polymer/pages/products-list.html"></app-route>
              <app-route path="/users" import="/pages/users-page.html"></app-route>
              <app-route path="*">
                <template>
                  <p>Inline template FTW!</p>
                </template>
              </app-route>
            <app-router>
          </div>
        </paper-scroll-header-panel>
      </paper-drawer-panel>

      <paper-toast id="toast">
        <span class="toast-hide-button" role="button" tabindex="0" onclick="app.$.toast.hide()">Ok</span>
      </paper-toast>
    </template>

</body>
</html>
